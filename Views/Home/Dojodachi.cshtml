<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta http-equiv="X-UA-Compatible" content="ie=edge">
        <link rel="stylesheet" href="~/css/style.css">
        <title>Dojodachi</title>
    </head>
    <body>
        <div id="top">
            <span class="vitals">Fullness: @ViewBag.DachiInfo.Fullness</span>
            <span class="vitals">Happiness: @ViewBag.DachiInfo.Happiness</span>
            <span class="vitals">Meals: @ViewBag.DachiInfo.Meals</span>
            <span class="vitals">Energy: @ViewBag.DachiInfo.Energy</span>
        </div>
        <div id="main">
            <img src="~/images/slh.jpg" alt="Dojodachi Image">
            <p>@ViewBag.DachiInfo.Action</p>
        </div>
        <div id="bottom">
            @if (ViewBag.DachiInfo.Status == 1)
            {
                <a class="btn" href="/feed">Feed</a>
                <a class="btn" href="/play">Play</a>
                <a class="btn" href="/work">Work</a>
                <a class="btn" href="/sleep">Sleep</a>
            } else {
                <a class="btn" href="/reset">Restart?</a>
            }
        </div>
    </body>
</html>